---
layout: base.njk
---

<nav class="text-sm text-stone-600 mb-6">
    <a href="/" class="hover:text-stone-800 transition-colors">Home</a> 
    <span class="mx-2">â€º</span> 
    <span class="text-stone-800">{{ title }}</span>
</nav>

<article class="max-w-4xl mx-auto">
    <header class="mb-8">
        <h1 class="text-3xl font-serif mb-4">{{ title }}</h1>
        {% if description %}
        <p class="text-lg text-stone-600">{{ description }}</p>
        {% endif %}
    </header>

    <div class="prose prose-stone max-w-none">
        {{ content | safe }}
    </div>
    
    {% if references %}
    <section class="mt-12 pt-8 border-t border-stone-200">
        <h2 class="text-2xl font-serif mb-6">References</h2>
        <div class="bg-stone-50 rounded-lg p-6">
            <ol class="text-sm space-y-2 text-stone-700">
                {% for ref in references %}
                <li id="ref-{{ loop.index }}" class="leading-relaxed">
                    <span class="font-medium">[{{ loop.index }}]</span> {{ ref | safe }}
                </li>
                {% endfor %}
            </ol>
        </div>
    </section>
    {% endif %}
    
    {% if footnotes %}
    <section class="mt-8 pt-6 border-t border-stone-200">
        <h3 class="text-lg font-serif mb-4">Notes</h3>
        <div class="text-sm space-y-1 text-stone-600">
            {% for note in footnotes %}
            <p id="note-{{ loop.index }}">
                <span class="font-medium">{{ loop.index }}.</span> {{ note | safe }}
            </p>
            {% endfor %}
        </div>
    </section>
    {% endif %}
</article>

<style>
/* Academic citation styles */
.prose .citation {
    @apply text-stone-600 text-sm;
}

.prose .citation-link {
    @apply text-stone-700 hover:text-stone-900 no-underline;
}

.prose .footnote-ref {
    @apply text-stone-600 hover:text-stone-800 no-underline text-xs;
    vertical-align: super;
}

.prose blockquote {
    @apply border-l-4 border-stone-300 pl-4 italic text-stone-700;
}

.prose .academic-quote {
    @apply bg-stone-50 border-l-4 border-stone-400 p-4 my-4 italic;
}
</style>


